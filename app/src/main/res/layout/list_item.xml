<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/listOuterCardHeight"
    android:scaleType="fitXY"
    card_view:cardElevation="0dp"
    card_view:cardMaxElevation="0dp"    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/lightGreyColor"
        >
        <LinearLayout
            android:id="@+id/galleryTypeLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/cardViewHeadHeight"
            android:orientation="vertical"
            android:gravity="center_vertical"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Landscape"
                android:textColor="@color/darkGreyTextColor"
                android:layout_marginLeft="@dimen/margin_12dp"
                android:textSize="@dimen/textSize_16sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2452 Photo"
                android:textColor="@color/lightGreyTextColor"
                android:layout_marginLeft="@dimen/margin_12dp"
                android:textSize="@dimen/textSize_12sp"/>
        </LinearLayout>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/galleryTypeLinearLayout">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center"
                android:background="@color/whiteColor"
                android:weightSum="3">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:layout_weight="1"
                    android:padding="@dimen/padding_5dp"
                    android:cropToPadding="true"
                    android:src="@drawable/download"/>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:layout_weight="1"
                    android:padding="@dimen/padding_5dp"
                    android:cropToPadding="true"
                    android:src="@drawable/profile"/>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:layout_weight="1"
                    android:padding="@dimen/padding_5dp"
                    android:cropToPadding="true"
                    android:src="@drawable/jdpp"/>
            </LinearLayout>
        </android.support.v7.widget.CardView>
    </RelativeLayout>
</android.support.v7.widget.CardView>